# Database Configuration
DATABASE_URL="mongodb://localhost:27017/credential_manager"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Encryption Key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY="your-32-byte-hex-encryption-key"

# Application Configuration
NEXTAUTH_URL="https://credentials.yourcompany.com"
NEXTAUTH_SECRET="your-nextauth-secret"

# BEXIO API Configuration (optional)
BEXIO_API_URL="https://api.bexio.com"
BEXIO_API_KEY="your-bexio-api-key"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB
UPLOAD_DIR="./uploads"

# Security Configuration
CORS_ORIGIN="https://credentials.yourcompany.com"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Development Configuration
NODE_ENV="production"
